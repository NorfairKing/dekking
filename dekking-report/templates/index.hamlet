<html>
  <head>
    <link rel="stylesheet" href=@{StyleFile}>
  <body>
    <h1>
      Overview

    <table>
      <thead>
        <tr>
          <th>
            Package
          <th>
            Module
          <th>
            Top-level bindings
      <tbody>
        $forall (packageName, (moduleName, summary)) <- summaries
          <tr>
            <td>
              <code>
                #{packageName}
            <td>
              <a href=@{ModuleFile packageName moduleName}>
                <code>
                  #{moduleName}
            <td>
              <progress value=#{coverageSummaryCovered summary} max=#{coverageSummaryTotal summary}>%</progress>
      <tfoot>
        <tr>
          <td>
            Total
          <td>
          <td>
            <progress value=#{coverageSummaryCovered totalSummary} max=#{coverageSummaryTotal totalSummary}>%</progress>
